<div class="d-inline-flex p-5 row col-md-12">
  <div class="col-md-5">
    <%= image_tag(@skin.image, width: '100%') %>
  </div>
  <div class="col-md-7">
    <h4 style="border-left: 3px solid #<%= @skin.name_color %>;">
      <span style="margin-left: 2%;"><%= @skin.name %></span>
    </h4>
    <div>
      <%= @skin.exterior %>
    </div>
    <div class="skin">
      <% if @skin.float&.positive? %>
        <div class="float">
          <i class="bi bi-caret-down-fill" style="margin-left: <%= @skin.float * 100 %>%; font-size: 10px;"></i>
          <div class="progress chart"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<h4 class="mt-3"><%= t('skins.components.layout.logs') %></h4>
<div class="row">
  <div class="table-wrap">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th><%= t('.steam_price') %></th>
          <th><%= t('.created_at') %></th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @skin.logs.each do |log| %>
          <tr>
            <td><%= number_to_currency(log.steam_price) %></td>
            <td><%= l(log.created_at) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
