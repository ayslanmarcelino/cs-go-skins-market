  <%= steam_account.profile_url %>
  <%= steam_account.nickname %>
  <%= image_tag(steam_account.avatar_url) %>
  <%= image_tag(steam_account.avatar_medium_url) %>
  <%= image_tag(steam_account.avatar_full_url) %>
  <%= steam_account.real_name %>
<% end %> 
